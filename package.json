{
  "name": "playwright-react-18-vite-ts",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "code-quality:eslint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "code-quality:tslint": "tsc --noEmit",
    "code-quality:prettier:write": "prettier --write .",
    "pre-commit": "npm run code-quality:eslint && npm run code-quality:tslint && npm run code-quality:prettier:write",
    "prepare": "husky",
    "test-ct": "playwright test -c playwright-ct.config.ts",
    "view-ct-reports": "npx playwright show-report playwright-report/component",
    "test-e2e": "playwright test -c playwright-e2e.config.ts",
    "view-e2e-reports": "npx playwright show-report playwright-report/e2e",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build"
  },
  "dependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@chromatic-com/storybook": "^1.3.1",
    "@playwright/experimental-ct-react": "^1.42.1",
    "@playwright/test": "^1.42.1",
    "@storybook/addon-essentials": "^8.0.6",
    "@storybook/addon-interactions": "^8.0.6",
    "@storybook/addon-links": "^8.0.6",
    "@storybook/addon-onboarding": "^8.0.6",
    "@storybook/blocks": "^8.0.6",
    "@storybook/react": "^8.0.6",
    "@storybook/react-vite": "^8.0.6",
    "@storybook/test": "^8.0.6",
    "@types/node": "^20.11.30",
    "@types/react": "^18.2.66",
    "@types/react-dom": "^18.2.22",
    "@typescript-eslint/eslint-plugin": "^7.2.0",
    "@typescript-eslint/parser": "^7.2.0",
    "@vitejs/plugin-react-swc": "^3.5.0",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.6",
    "eslint-plugin-storybook": "^0.8.0",
    "husky": "^9.0.11",
    "prettier": "3.2.5",
    "storybook": "^8.0.6",
    "typescript": "^5.2.2",
    "vite": "^5.2.0"
  }
}
